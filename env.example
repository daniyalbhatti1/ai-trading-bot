# AI Trading Bot Environment Configuration

# Trading Configuration
TRADING_MODE=paper  # paper, live
INITIAL_BALANCE=10000
BASE_CURRENCY=USDT
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.05
MAX_DAILY_TRADES=50

# API Keys (Get from respective exchanges)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/trading_bot
REDIS_URL=redis://localhost:6379/0
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=your_org_here
INFLUXDB_BUCKET=trading_data

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
SESSION_TIMEOUT=3600

# Monitoring and Alerts
SENTRY_DSN=your_sentry_dsn_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Model Configuration
MODEL_RETRAIN_FREQUENCY=24  # hours
PREDICTION_HORIZON=24  # hours
LOOKBACK_WINDOW=100
CONFIDENCE_THRESHOLD=0.7

# Risk Management
VAR_CONFIDENCE_LEVEL=0.95
CVAR_CONFIDENCE_LEVEL=0.95
MONTE_CARLO_SIMULATIONS=10000
MAX_PORTFOLIO_VAR=0.05

# Data Sources
PRIMARY_DATA_SOURCE=binance
BACKUP_DATA_SOURCE=alpha_vantage
UPDATE_INTERVAL=60  # seconds
HISTORICAL_DATA_DAYS=365

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Performance
ENABLE_GPU=true
NUM_WORKERS=4
BATCH_SIZE=32
CACHE_TTL=300  # seconds

# Feature Flags
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_NEWS_ANALYSIS=true
ENABLE_SOCIAL_MEDIA_ANALYSIS=true
ENABLE_OPTIONS_FLOW=true
ENABLE_DARK_POOL_ANALYSIS=true